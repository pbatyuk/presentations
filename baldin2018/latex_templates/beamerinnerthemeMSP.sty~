\AtBeginDocument{\bfseries\selectfont} % normal text
\setbeamerfont*{title}{series=\bf, size=\LARGE}
\setbeamerfont*{author}{series=\bf, size=\Large}
\setbeamerfont*{date}{series=\bf, size=\footnotesize}
\setbeamerfont*{institute}{series=\bf, size=\footnotesize}
\setbeamerfont*{frametitle}{series=\bf}
\setbeamerfont*{author in head/foot}{series=\bf}
\setbeamerfont*{title in head/foot}{series=\bf}
\setbeamerfont*{date in head/foot}{series=\bf}

\setbeamercolor{titlelike}{parent=structure}
\setbeamercolor{title}{fg=titleColor}
\setbeamercolor{author}{fg=textColor}
\setbeamercolor{institute}{fg=titleColor}
\setbeamercolor{date}{fg=textColor}
\setbeamercolor{item projected}{fg=black, bg=bg2Color}

\setbeamercolor{normal text}{fg=textColor}
\setbeamercolor{alerted text}{fg=alertColor}
\setbeamercolor{section in head/foot}{fg=titleColor, bg=bgColor}
% \setbeamerfont{section number projected}{family=\rmfamily,series=\bfseries,size=\normalsize}
\setbeamercolor{section in toc}{fg=alertColor}
\setbeamercolor{subsection in toc}{fg=textColor}


% Title page
\defbeamertemplate*{title page}{MSP}[1][]
{
  \vskip4.1cm%
  \begin{beamercolorbox}[wd=12cm,leftskip=2.5cm,sep=8pt,#1]{title page header}
    \usebeamerfont{title}\usebeamercolor[fg]{title}\inserttitle\par%
  \end{beamercolorbox}%
  \vskip1.1cm%
  \begin{beamercolorbox}[wd=12cm,leftskip=3cm,#1]{author}
    \usebeamerfont{author}\usebeamercolor[fg]{author}\insertauthor\par%
  \end{beamercolorbox}
  \vskip0.2cm%
  \begin{beamercolorbox}[wd=12cm,leftskip=3cm,#1]{institute}
    \usebeamerfont{institute}\usebeamercolor[fg]{institute}\insertinstitute\par%
  \end{beamercolorbox}
  \vskip0.08cm%
  \begin{beamercolorbox}[wd=12cm,leftskip=3cm,#1]{date}
    \usebeamerfont{date}\usebeamercolor[fg]{date}\insertdate%
  \end{beamercolorbox}
  \vfill
}


\defbeamertemplate*{footline}{MSP}[1][]
{
  \ifnum\thepage>1\relax%
  \leavevmode%
  \hbox{%
    \begin{beamercolorbox}[wd=.3\paperwidth,ht=0ex,dp=2pt,center,]{section in head/foot}%
      \usebeamerfont{author in head/foot}\insertshortauthor%
    \end{beamercolorbox}%
    \begin{beamercolorbox}[wd=.5\paperwidth,ht=0ex,dp=2pt,center]{section in head/foot}%
      \usebeamerfont{title in head/foot}\insertshorttitle%
    \end{beamercolorbox}%
    \begin{beamercolorbox}[wd=.2\paperwidth,ht=0ex,dp=2pt,right]{section in head/foot}%
      \textbf{\insertframenumber{} / \inserttotalframenumber} \hspace*{5ex}  %номер текущего слайда
    \end{beamercolorbox}}%
  \vskip0cm%
  \fi
}


% Items
\setbeamertemplate{items}[ball]
\setbeamertemplate{sections/subsections in toc}[square]

